<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <div class="row mx-0 justify-content-end">
        <a href="/restaurants/{{restaurant._id}}/edit"><button type="button" class="btn btn-success edit mr-3">Edit</button></a>
        <a href="/"><button type="button" class="btn btn-primary delete">back</button></a>
      </div>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{#if restaurant.location}} {{restaurant.location}} {{else}} undefined {{/if}}
        <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{#if restaurant.phone}} {{restaurant.phone}} {{else}} undefined {{/if}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100"
        src="{{#if restaurant.image}} {{restaurant.image}} {{else}} https://i.imgur.com/jFMxCZd.png {{/if}}"
        alt="{{restaurant.name}}" style="max-width: 600px;">
    </div>
  </div>
</div>